using Nemerle;
using Nemerle.Collections;
using Nemerle.Text;
using Nemerle.Utility;

using System;
using Nemerle.Statechart;

  [statechart(<#

  flags testing;
  //flags debug;
  
  name "relocate state transition";
  
  state A
  {
    a => B;
  }

  state B
  {
    @C: a => A;
    a => C;
  }
  
  state C
  {
  }
  
  #>)]
  public class example
  {
  }

  
  module Test
  {
    Main() : void
    {
      def fsm = example();
      def tester = fsm.GetTester();
      tester.ConsoleTestInit();
      tester.Initiate("A", "EntryA");
      tester.Test("a", ["A"], ["B"]);
      tester.Test("a", ["B"], ["C"]);
      tester.Test("a", ["C"], ["A"]);
      fsm.Terminate();
    }
  }
 
