using Nemerle;
using Nemerle.Collections;
using Nemerle.Text;
using Nemerle.Utility;

using System;
using System.Collections.Generic;
using System.Linq;
using System.Threading;
using Nemerle.Statechart;

namespace Nemerle.Statechart.Tests
{
  /// <summary>
  /// Description of Telephone.
  /// </summary>
  [statechart(
  <#
   //flags debug;
   
   event dial_digit(int);
   
   state Idle
   {
     lift_receiver / get_dial_tone => Active;
   }
   
   state Active
   {
     [Initial]
     state DialTone
     {
       do / play_dial_tone;
       dial_digit => Dialing;//dial_digit(n) => Dialing;
     }
     
     state Time-out
     {
       do / play_message;
     }
     
     state Dialing
     {
       after (15 sec) => Time-out;
       dial_digit     => { // (n)
                           incomplete      => @;
                           valid / connect => Connecting;
                           else            => Invalid;
                         }
     }
     
     state Connecting
     {
       connected => Ringing;
       busy      => Busy;
     }
     
     state Invalid
     {
       do / play_message;
     }
     
     state Busy
     {
       do / play_busy_tone;
     }
     
     state Ringing
     {
       do / play_ringing_tone;
       calee_answers / enable_speech => Talking;
     }
     
     state Talking
     {
       callee_hangs_up => Pinned;
     }
     
     state Pinned
     {
       callee_answers => Talking;
     }
     
     @Active:
     {
       caller_hangs_up / disconnect => Idle;
       abort                        => aborted;
       terminate                    => $0;
     }
   }
   
   (X) aborted;
   activeEntry: => Active;
  #>
  )]
  class Telephone
  {
    incomplete : bool
    {
      get
      {
        false
      }
    }
    
    valid : bool
    {
      get
      {
        false
      }
    }
    
    play_dial_tone(_ : CancellationToken) : void
    {
      
    }
  }
}
