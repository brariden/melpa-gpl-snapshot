using Nemerle;
using Nemerle.Collections;
using Nemerle.Text;
using Nemerle.Utility;

using System;
using System.Collections.Generic;
using System.Linq;

namespace Nemerle.Statechart.Tests
{
  /// <summary>
  /// Description of CalcEnterOper.
  /// </summary>
  [statechart(
  <#

    name enter_operand;
    
    event digit(char);
    entry / ent_op = prefix;
    exit / prefix = "";
    
    digit: => {
                n == '0' => zero;
                else    / insert(n) => int;
              }

    point: / insert('0') => frac;

    digit(n) / insert(n);
    point (=> frac;

    state zero
    {
      $> / insert('0');
      digit(i) [i == '0'] / ();
      digit(n) [else] / insert(n) => int;
    }

    state int
    {
    }

    state frac
    {
      entry / insert(',');
      point / ();
    }

  #>
  )]
  class CalcEnterOper
  {
    insert(ch : char) : void
    {
      ent_op += ch;
    }
    
    mutable ent_op : string;
    mutable prefix : string = "";
  }
}
