<configuration>

  <logger name="chee" level="warn" />

  <appender name="stdout" class="ch.qos.logback.core.ConsoleAppender">
    <encoder>
      <pattern>%level [%thread] [%file:%line] %msg%n</pattern>
    </encoder>
  </appender>

  <root level="warn">
    <appender-ref ref="stdout"/>
  </root>
</configuration>
