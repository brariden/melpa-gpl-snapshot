# My root editorconfig thingy

# top-most EditorConfig file
root = false

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
charset = utf-8
max_line_length = 120
indent_style=space
indent_size=2

[{package.json,*.yml}]
indent_style = space
indent_size = 2

[*.{md,markdown}]
max_line_length = 9999999
