using Nemerle.Statechart;

  /// <summary>
  /// Description of Hypothetical.
  /// </summary>
  [statechart(<#
  
  flags auto_initial testing;
  
  name "hypothetical example"; // see "practical uml statecharts in c/c++ second edition" page 88
  0 / foo = false => s2;
  
  state s
  {
    0 => s11;
    I [foo] / foo = false;
    E (=> s11;
    terminate => $0;
  }
  
  state s1 : s
  {
    A => @;
    D [!foo] / foo = true (=> s;
    C => s2;
    F => s211;
    
    state s11
    {
      D [foo] / foo = false (=> s1;
      H => s;
      G => s211;
    }
  }
  
  state s2 : s
  {
    0 => s211;
    I [!foo] / foo = true;
    C => s1;
    F => s11;
    
    state s21
    {
      A => @;
      G => s1;
      B => s21;
    }
    
    state s211 : s21
    {
      H => s;
      D => s21;
    }
  }
  #>)]
  public class HipotheticalExample
  {
    foo : bool {get;set;}
  }

