using Nemerle;
using Nemerle.Collections;
using Nemerle.Text;
using Nemerle.Utility;

using System;
using System.Collections.Generic;
using System.Linq;
using System.Threading;

namespace Nemerle.Statechart.Tests
{
  /// <summary>
  /// Description of FastKeystroke.
  /// </summary>
  [statechart(
  <#
  flags auto_initial;
  
  state NotPressed
  {
    push => Check;
  }
  
  state Check
  {
    after (1 s) => Holded;
    release => NotPressed;
  }
    
  state Holded
  {
    entry / holded;
    release / released => NotPressed;
    do / doing_while_hold;
  }
    
  #>)]
  public class FastKeystroke
  {
    public Activity : Action[CancellationToken] {get;set;}
    
    doing_while_hold(tok : CancellationToken) : void
    {
      Activity?.Invoke(tok)
    }
  }
}
