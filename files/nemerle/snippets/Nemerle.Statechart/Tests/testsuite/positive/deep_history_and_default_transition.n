using Nemerle;
using Nemerle.Collections;
using Nemerle.Text;
using Nemerle.Utility;

using System;
using System.Collections.Generic;
using System.Linq;
using System.Console;
using Nemerle.Statechart;

  /// <summary>
  /// Description of PathCover.
  /// </summary>
  [statechart(
  <#
  flags testing;
  //flags debug;
  
  name "deep history and default transition";
  
  state A
  {
    b => B;
    (H*) => G;
  }

  state D : A
  {
    c => G;
    d => A.H;
  }

  state G : A
  {
    a => D;
  }

  state E : D
  {
    a => F;
  }
      
  state F : D
  {
    a => C;
  }
      
  state B
  {
    a => A.H;
  }

  state C
  {
    a => A;
    b => B;
  }
  #>
  )]
  public class example
  {

  } 

  module Test
  {
    public Main() : void
    {
      def fsm = example();
      def tester = fsm.GetTester();
      tester.ConsoleTestInit();
      tester.Initiate("E", "EntryA", "EntryD", "EntryE");
      tester.Test("d", ["E", "D"], ["G"]);
      tester.Test("a", ["G"], ["D", "E"]);
      tester.Test("a", ["E"], ["F"]);
      tester.Test("b", ["F", "D", "A"], ["B"]);
      tester.Test("a", ["B"], ["A", "D", "F"]);
      tester.Test("a", ["F", "D", "A"], ["C"]);
      tester.Test("a", ["C"], ["A", "D", "E"]);
      tester.Test("d", ["E", "D"], ["D", "F"]);
      tester.Test("b", ["F", "D", "A"], ["B"]);
      tester.Test("a", ["B"], ["A", "D", "F"]);
      tester.Test("c", ["F", "D"], ["G"]);
      tester.Test("a", ["G"], ["D", "E"]);
      tester.Test("b", ["E", "D", "A"], ["B"]);
      tester.Test("a", ["B"], ["A", "D", "E"]);
      fsm.Terminate();
    }
  }
  
